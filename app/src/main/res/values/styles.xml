<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#80000000</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/futuristic_font</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:itemBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- layout styles-->
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- progressbar style-->
    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/width_30dp</item>
        <item name="android:layout_height">@dimen/height_30dp</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="layout_goneMarginBottom">@dimen/margin_20</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- cell board size -->
    <style name="BoardCell">
        <item name="android:layout_width">@dimen/cell_width</item>
        <item name="android:layout_height">@dimen/cell_height</item>
    </style>

    <!-- WinningLines -->
    <!-- vertical -->
    <style name="WinningLinesVertical">
        <item name="android:layout_width">@dimen/line_width_v</item>
        <item name="android:layout_height">@dimen/line_height_v</item>
    </style>

    <!-- horizontal -->
    <style name="WinningLinesHorizontal">
        <item name="android:layout_width">@dimen/line_width_h</item>
        <item name="android:layout_height">@dimen/line_height_h</item>
    </style>

    <!-- diagonal -->
    <style name="WinningLinesDiagonal">
        <item name="android:layout_width">@dimen/line_width_d</item>
        <item name="android:layout_height">@dimen/line_height_d</item>
    </style>

    <style name="PlayerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:textColor">@color/color_blue</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Player1TextStyle" parent="PlayerTextStyle">
        <item name="layout_goneMarginTop">@dimen/margin_20</item>
        <item name="android:hint">@string/player_x</item>
    </style>

    <style name="Player2TextStyle" parent="PlayerTextStyle">
        <item name="android:hint">@string/player_y</item>
    </style>

    <!-- players' score style -->
    <style name="PlayerScoreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:color">@color/color_red</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Player1ScoreStyle" parent="PlayerScoreStyle">
        <item name="android:layout_marginTop">@dimen/margin_20</item>
    </style>

    <!-- button style from activity_home.xml -->
    <style name="HomeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="styleableToast">
        <item name="stTextBold">false</item>
        <item name="stTextColor">@android:color/white</item>
        <item name="stTextSize">@dimen/text_size_small</item>
        <item name="stFont">@font/futuristic_font</item>
        <item name="stColorBackground">@android:color/black</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/colorPrimary</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">center</item>
        <item name="stRadius">50dp</item>
    </style>
</resources>
