<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchParent"
        android:layout_margin="@dimen/margin_40"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/app_title"
            style="@style/WrapContent"
            android:layout_centerHorizontal="@bool/value_true"
            android:fontFamily="monospace"
            android:text="@string/app_label"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/single_player_button"
            style="@style/HomeButton"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/btn_single_player_human"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/computer_player_button"
            style="@style/HomeButton"
            android:layout_below="@+id/single_player_button"
            android:text="@string/btn_single_player_computer"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/single_player_button"
            app:layout_constraintBottom_toTopOf="@+id/multi_player_button"/>

        <Button
            android:id="@+id/multi_player_button"
            style="@style/HomeButton"
            android:layout_below="@+id/computer_player_button"
            android:text="@string/btn_multiplayer"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/about_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/computer_player_button" />

        <Button
            android:id="@+id/about_button"
            style="@style/HomeButton"
            android:layout_below="@+id/multi_player_button"
            android:text="@string/btn_about"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/rocket_image_view"
            android:layout_width="@dimen/rocket_width"
            android:layout_height="@dimen/rocket_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rocket"
            android:contentDescription="@string/rocket_image"
            app:layout_constraintBottom_toBottomOf="@+id/about_button"
            app:layout_constraintEnd_toEndOf="@+id/multi_player_button"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>