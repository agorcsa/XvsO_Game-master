<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        style="@style/MatchParent"
        android:padding="@dimen/margin_10"
        android:background="@drawable/nightsky">

        <ScrollView
            android:id="@+id/attribution_scroll"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attribution_link_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>

        <ImageView
            android:id="@+id/astronaut_image_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_40"
            android:background="@drawable/moon"
            android:contentDescription="@string/moon_image" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit to home"
            android:textSize="12sp"
            android:onClick="onExitToHome"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/white"
            android:background="@android:color/transparent" />
    </FrameLayout>
</layout>