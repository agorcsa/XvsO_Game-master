<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        style="@style/MatchParent"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/astronaut_image_view"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/astronaut"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/margin_20" />

        <LinearLayout
            android:id="@+id/about_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_text_view_0"
                android:layout_width="150dp"
                android:textStyle="bold"
                android:layout_marginTop="100dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/about_text_view_1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/futuristic_font"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/about_text_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/futuristic_font"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/about_text_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/futuristic_font"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_to_home"
            android:textSize="12sp"
            android:onClick="onExitButtonClick"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/white"
            android:background="@android:color/transparent" />
    </FrameLayout>
</layout>