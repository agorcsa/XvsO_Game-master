<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.xvso.viewmodel.OnlineGameViewModel" />
    </data>

    <FrameLayout
        style="@style/MatchParent"
        android:background="@drawable/nightsky">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/MatchParent">

            <TextView
                android:id="@+id/timer_text_view_online"
                style="@style/WrapContent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/time_left_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timer_text_view_online"
                android:layout_marginTop="8dp"
                android:text="@string/time_left_text"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/timer_text_view_online"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="12sp" />

            <!-- Player1 -->
            <com.kienht.csiv.CircleSliceImageView
                android:id="@+id/profile_picture_player_1"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/profile_image"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/border_width"
                app:civ_mode="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:profileImage="@{viewModel.userLiveData.imageUrl}" />

            <TextView
                android:id="@+id/online_player1_text"
                style="@style/WrapContent"
                android:layout_below="@id/profile_picture_player_1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="@string/player_x"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_picture_player_1" />

            <TextView
                android:id="@+id/online_player1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/online_player1_text"
                android:layout_marginStart="16dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_xlarge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/online_player1_text" />

            <!-- Player2 -->
            <com.kienht.csiv.CircleSliceImageView
                android:id="@+id/profile_picture_player_2"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/profile_image"
                android:src="@drawable/ufo_black"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/border_width"
                app:civ_mode="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/online_player2_text"
                style="@style/WrapContent"
                android:text="@string/player_y"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/profile_picture_player_2"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/online_player2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/online_player2_text"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:textSize="@dimen/text_size_xlarge"
                app:layout_constraintTop_toBottomOf="@id/online_player2_text"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- switches the player's turn-->
            <TextView
                android:id="@+id/turn_switcher_text_view"
                style="@style/WrapContent"
                android:contentDescription="@string/turn_order"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/online_player1_score"
                app:layout_constraintBottom_toTopOf="@+id/grid_layout"
                app:currentPlayer="@{viewModel.gameLiveData.currentPlayer}"
                app:currentUser="@{viewModel.userLiveData.name}"
                app:gameFinished="@{viewModel.gameLiveData.gameResult}" />

            <!-- Board (3x3 cells) -->
            <GridLayout
                android:id="@+id/grid_layout"
                style="@style/WrapContent"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_gravity="center"
                android:columnCount="3"
                android:rowCount="3">

                <!-- Cell 0 (left-up) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_1"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/nightsky"
                    android:layout_marginBottom="@dimen/margin"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(0)}"
                    android:tag="0"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(0)}" />

                <!-- Cell 1 (center-up) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_2"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/nightsky"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(1)}"
                    android:tag="1"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(1)}" />

                <!-- Cell 2 (right-up) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_3"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/nightsky"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(2)}"
                    android:tag="2"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(2)}" />
                ​
                <!-- Cell 3 (left-middle) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_4"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@drawable/nightsky"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(3)}"
                    android:tag="3"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(3)}" />
                ​
                <!-- Cell 4 (center) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_5"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/nightsky"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(4)}"
                    android:tag="4"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(4)}" />
                ​
                <!-- Cell 5 (right-middle) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_6"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:background="@drawable/nightsky"
                    android:clickable="@{viewModel.isGameInProgress}"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(5)}"
                    android:tag="5"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(5)}" />
                ​
                <!-- Cell 6 (right-down) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_7"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@drawable/nightsky"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(6)}"
                    android:tag="6"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(6)}" />
                ​
                <!-- Cell 7 (center-down) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_8"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/nightsky"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(7)}"
                    android:tag="7"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(7)}" />
                ​
                <!-- Cell 8 (right-down) -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/block_9"
                    android:layout_width="@dimen/cell_width"
                    android:layout_height="@dimen/cell_height"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@drawable/nightsky"
                    android:onClick="@{() -> viewModel.saveCellToFirebase(8)}"
                    android:tag="8"
                    app:currentP="@{viewModel.gameLiveData.currentPlayer}"
                    app:currentU="@{viewModel.userLiveData.name}"
                    app:gameResult="@{viewModel.gameLiveData.gameResult}"
                    app:state="@{viewModel.gameLiveData.board.cells.get(8)}" />
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Winning lines -->
        <!-- vertical lines -->
        <!-- left-vertical line -->
        <View
            android:id="@+id/left_vertical"
            android:layout_width="@dimen/line_thickness"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"
            app:visibility="@{viewModel.gameLiveData.winningLines.leftVertical}" />

        <!-- center-vertical line -->
        <View
            android:id="@+id/center_vertical"
            android:layout_width="@dimen/line_thickness"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center"
            android:background="@color/white"
            app:visibility="@{viewModel.gameLiveData.winningLines.centerVertical}" />
        ​
        <!-- right-vertical line -->
        <View
            android:id="@+id/right_vertical"
            android:layout_width="@dimen/line_thickness"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:background="@color/white"
            app:visibility="@{viewModel.gameLiveData.winningLines.rightVertical}" />
        ​
        <!-- horizontal lines -->
        <!-- top-horizontal line -->
        <View
            android:id="@+id/top_horizontal"
            android:layout_width="@dimen/line_height"
            android:layout_height="@dimen/line_thickness"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:background="@color/white"
            app:visibility="@{viewModel.gameLiveData.winningLines.topHorizontalLine}" />

        <!-- center-horizontal line -->
        <View
            android:id="@+id/center_horizontal"
            android:layout_width="@dimen/line_height"
            android:layout_height="@dimen/line_thickness"
            android:layout_gravity="center"
            android:background="@color/white"
            app:visibility="@{viewModel.gameLiveData.winningLines.centerHorizontal}" />

        <!-- bottom-horizontal line -->
        <View
            android:id="@+id/bottom_horizontal"
            android:layout_width="@dimen/line_height"
            android:layout_height="@dimen/line_thickness"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@color/white"
            app:visibility="@{viewModel.gameLiveData.winningLines.bottomHorizontal}" />

        <!-- diagonals -->
        <!-- left-right line -->
        <View
            android:id="@+id/left_right_diagonal"
            android:layout_width="@dimen/line_thickness"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:rotation="135"
            app:visibility="@{viewModel.gameLiveData.winningLines.leftRightDiagonal}" />

        <!-- right-left line -->
        <View
            android:id="@+id/right_left_diagonal"
            android:layout_width="@dimen/line_thickness"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:rotation="45"
            app:visibility="@{viewModel.gameLiveData.winningLines.rightLeftDiagonal}" />

        <RelativeLayout
            style="@style/MatchParent">

            <!-- animated image which shows before the board is visible -->
            <ImageView
                android:id="@+id/vs_image_view"
                style="@style/WrapContent"
                android:layout_centerInParent="true"
                android:background="@drawable/nightsky"
                android:contentDescription="@string/animated_image" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show_winner_layout"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_winner_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_above="@+id/winning_image_view"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_20"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white" />

            <com.kienht.csiv.CircleSliceImageView
                android:id="@+id/winning_image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_above="@+id/play_again_button"
                android:layout_centerHorizontal="true"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/border_width"
                app:civ_mode="2"
                android:visibility="invisible" />

            <Button
                android:id="@+id/play_again_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_above="@+id/reset_game_button"
                android:onClick="@{() -> viewModel.playGame()}"
                android:layout_marginBottom="@dimen/margin_20"
                android:text="@string/new_round"
                android:background="@drawable/button_purple_transparent" />

            <Button
                android:id="@+id/reset_game_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/new_game"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:onClick="@{() -> viewModel.playNewGame()}"
                android:background="@drawable/button_purple_transparent" />
        </RelativeLayout>

        <Button
            android:id="@+id/exit_button_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_to_menu"
            android:textSize="12sp"
            android:onClick="@{() -> viewModel.exitGame()}"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_gravity="center|bottom"
            android:textColor="@color/white"
            android:background="@android:color/transparent" />
    </FrameLayout>
</layout>