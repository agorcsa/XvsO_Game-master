<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#efae66" />
            <gradient android:angle="-90" android:startColor="#FF8C00" android:endColor="#fed8b1" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#efae66" />
            <solid android:color="#FF8C00" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#efae66" />
            <gradient android:angle="-90" android:startColor="#fed8b1" android:endColor="#FF8C00" />
        </shape>
    </item>
</selector>
